{% block menuprofil %}
	<div class="grid grid-cols-6 ml-2" id="Article">
		<div class="justify-self-center col-span-2">
			<div
				class="justify-self-center ml-2">
				{# boutton to say you’re connecting #}
				<div class="inline-flex relative">
					 
					<div class="absolute inline-block bottom-8 right-10 translate-x-2/4 translate-y-1/2 rotate-0 skew-x-0 skew-y-0 scale-x-100 scale-y-100 p-4 text-xs bg-green-400 rounded-full z-10"></div>
					{# picture #}
					<img src="{{ asset('images/avatar/')}}{{ profilComplet.imageName }}" class="w-[280px] h-[280px] rounded-full shadow-ga border-solid border-8 border-white" alt="">
				</div>
				{# Lastname and name #}
				<div class="flex mt-4">
					<p class="text-xl ml-10 font-bold text-center">
						{{ profilComplet.firstname }}
					</p>
				</div>
				<div class="flex mt-4">
					<p class="text-xl ml-10 font-bold text-center">
						{{ profilComplet.lastname }}
					</p>
				</div>
				{# profession #}
				<div class="flex ml-10 mt-1">
					<p class="text-base">
						{{ profilComplet.status }}
					</p>
				</div>
				{# ? ? ? #}
				<div class="flex ml-10 mt-2">
					<a class="text-sm text-blue-400 cursor-pointer">
						42 Relations sur Fashion Paris
					</a>
				</div>

				{# Disposition logo #}
				<div
					class="m-6 ml-14 inline-flex relative w-fit space-x-2">
					{# Logo #}
					<img src="../img/facebook.png" alt="facebook">

					<img src="../img/instagram.png" alt="instagram">

					<img src="../img/linkedin.png" alt="linkedin">

					<img src="../img/pinterestre.png" alt="pinterest">

