<form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="dropdown-item text-sm py-2 px-4 font-normal block w-full
                                                whitespace-nowrap bg-transparent text-gray-700 hover:bg-gray-100">Delete</button>
</form>
